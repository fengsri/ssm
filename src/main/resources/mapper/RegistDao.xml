<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.RegistDao">

    <!--public User getUserByName(User user);-->
    <select id="getUserByName" resultType="User" parameterType="User">
        select * from user where user_name=#{user_name}
    </select>

    <!-- public int registUser(User user);-->
    <insert id="registUser" parameterType="User">
       insert into user (user_name,user_password) values (#{user_name},#{user_password})
    </insert>
</mapper>